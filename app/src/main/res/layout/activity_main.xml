<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_mrMckenic"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_height="200dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_mrMckenic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/illustrate_mrmckenic"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor= "#202859"
            android:text="@string/mr_mckenic_first_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_gkGermKiller"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_height="200dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_gkGermKiller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/illustrate_gkgermkiller"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor= "#202859"
            android:text="@string/gk_germkiller_first_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_engineerig"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_height="200dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_engineering"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/illustrate_engineering"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor= "#202859"
            android:text="@string/engineering_first_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"/>
    </LinearLayout>

</ScrollView>