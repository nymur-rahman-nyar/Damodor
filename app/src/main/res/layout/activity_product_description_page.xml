<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_MainConstraintLayout"
    tools:context=".ProductDescriptionPage">

    <ScrollView
        android:id="@+id/sv_ProductDescriptionPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="160dp"
            >

            <ImageView
                android:id="@+id/iv_DesPageMainProductImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ic_damodor_logo" />


            <TextView
                android:id="@+id/tv_DesPageProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="WT3902 9 in 1 Technology Oil"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_DesPageProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="This is just a bummy text for the description page of the product description page. Here, we will insert the product description. We will share the brief summary of the product and we will let the user know that we are the best in the market. "
                android:textSize="19sp" />

            <TextView
                android:layout_margin="8dp"
                android:text="Documents"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#A10B0B"
                android:text="Please check your downloads folder after downloading the documents from our app.The download is instant!"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <!-- First Card View card View -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_DesPageCatalogueTrigger"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="7dp"
                        android:src="@drawable/ic_document"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:text="Catalogue"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_margin="13dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!--Second Card View-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_DesPageMsdsTrigger"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="7dp"
                        android:src="@drawable/ic_document"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:text="MSDS/SDS"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_margin="13dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>





        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/cl_MainConstraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteY="613dp">



                    <ImageButton
                        android:backgroundTint="#A698EC9C"
                        android:id="@+id/imgBtn_DesPageCallUs"
                        android:src="@drawable/ic_call_us"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteY="613dp">



                    <ImageButton
                        android:backgroundTint="#A863B1EF"
                        android:id="@+id/imgBtn_DesPageMailUs"
                        android:src="@drawable/ic_mail_us"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />



                </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>