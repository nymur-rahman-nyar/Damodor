<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MailUsPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/illustrate_contact_us_background" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info@damodor.com"
                android:textColor="@color/damodor_brand_color"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="240dp" />


            <Button

                android:layout_margin="40dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_sendMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send mail"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Click on the send mail button to directly go to the mail application.\n \nIf you face any error please copy the email manually and email DamodorÂ®. "
                android:textAlignment="center"
                />




        </LinearLayout>




    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>